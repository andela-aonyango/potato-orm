{
    "name": "andela-aonyango/potato-orm",
    "type": "library",
    "description": "A lightweight ORM built using PHP and PDO.",
    "keywords": [
        "andela-aonyango",
        "potato-orm"
    ],
    "homepage": "https://github.com/andela-aonyango/potato-orm",
    "license": "MIT",
    "authors": [
        {
            "name": "andela-aonyango",
            "email": "andrew.onyango@andela.com",
            "homepage": "https://github.com/andela-aonyango",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6.0",
        "vlucas/phpdotenv": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=4.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "satooshi/php-coveralls": ">=1.0"
    },
    "autoload": {
        "psr-4": {
            "PotatoORM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PotatoORM\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
